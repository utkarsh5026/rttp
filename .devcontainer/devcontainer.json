{
  "name": "rttp â€” Rust Dev",
  "image": "mcr.microsoft.com/devcontainers/rust:1-bookworm",

  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "installOhMyZsh": true,
      "upgradePackages": true
    },
    "ghcr.io/devcontainers/features/git:1": {}
  },

  "customizations": {
    "vscode": {
      "extensions": [
        // Core Rust tooling
        "rust-lang.rust-analyzer",
        "vadimcn.vscode-lldb",
        // TOML support (Cargo.toml, rust-toolchain.toml)
        "tamasfe.even-better-toml",
        // Inline crate version indicators in Cargo.toml
        "fill-labs.dependi",
        "serayuzgur.crates",
        // Inline error messages in the editor
        "usernamehw.errorlens",
        // Spell checking
        "streetsidesoftware.code-spell-checker",
        // Git blame and history
        "eamodio.gitlens"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "rust-lang.rust-analyzer",
        // Run clippy (not just cargo check) on save
        "rust-analyzer.check.command": "clippy",
        "rust-analyzer.check.allTargets": true,
        "rust-analyzer.cargo.features": "all",
        "rust-analyzer.lens.enable": true,
        "rust-analyzer.inlayHints.parameterHints.enable": true,
        "rust-analyzer.inlayHints.typeHints.enable": true,
        "[rust]": {
          "editor.defaultFormatter": "rust-lang.rust-analyzer",
          "editor.formatOnSave": true
        }
      }
    }
  },

  // Pre-fetch dependencies and install useful cargo tools after container creation
  "postCreateCommand": "cargo fetch && cargo install cargo-audit cargo-watch",

  "remoteUser": "vscode",

  // Required for the CodeLLDB debugger to attach to processes inside Docker
  "runArgs": [
    "--cap-add=SYS_PTRACE",
    "--security-opt",
    "seccomp=unconfined"
  ],

  // Mount the target directory as a Docker volume for fast incremental rebuilds
  // when the container restarts (avoids recompiling everything from scratch).
  "mounts": [
    "source=${localWorkspaceFolderBasename}-target,target=/workspaces/${localWorkspaceFolderBasename}/target,type=volume"
  ]
}
